<% if current_user %>
  <% unless current_page?(dashboard_path) %>
    <%= link_to "Dashboard", dashboard_path %>
  <% end %>
  <%= button_to "Sign Out", sign_out_path %>
<% else %>
  <% unless current_page?(sign_in_path) %>
    <%= link_to "Sign In", sign_in_path %>
  <% end %>
  <% unless current_page?(sign_up_path) %>
    <%= link_to "Sign Up", sign_up_path %>
  <% end %>
<% end %>

<hr />
