<h1>Members of <%= link_to @league.name, league_path(@league) %></h1>
<div>
  <%= link_to "Invite new member", new_league_membership_path(@league) %>
</div>
<div>
  <ul>
    <% @memberships.each do |membership| %>
      <li>
        <%= membership.user_full_name %> - <%= membership.role_string %>
        <%= link_to "Edit", edit_league_membership_path(@league, membership) %>
      </li>
    <% end %>
  </ul>
</div>
